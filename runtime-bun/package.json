{
  "name": "@wnk/runtime-bun",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "start": "bun run runtime.tsx",
    "build:calculator": "bun build plugins/calculator/src/index.tsx --outfile plugins/calculator/dist/bundle.js --external react",
    "build:weather": "bun build plugins/weather/src/index.tsx --outfile plugins/weather/dist/bundle.js --external react",
    "build:todo": "bun build plugins/todo/src/index.tsx --outfile plugins/todo/dist/bundle.js --external react",
    "build:plugins": "bun run build:calculator && bun run build:weather && bun run build:todo"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-reconciler": "^0.29.0"
  },
  "devDependencies": {
    "bun-types": "^1.2.22",
    "@types/react": "^18.2.0",
    "@types/react-reconciler": "^0.28.0",
    "typescript": "^5.0.0"
  }
}
